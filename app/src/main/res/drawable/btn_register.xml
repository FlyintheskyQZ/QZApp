<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <gradient android:angle="0" android:endColor="#ADD8E6" android:startColor="#ADD8E6" android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <gradient android:angle="0" android:endColor="#98FB98" android:startColor="#32CD32" android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="0" android:endColor="#E1FFFF" android:startColor="#B0E0E6" android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>