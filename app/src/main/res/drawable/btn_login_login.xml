<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <gradient android:angle="0" android:endColor="#D3D3D3" android:startColor="#D3D3D3" android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <gradient android:angle="0" android:endColor="#FFA500" android:startColor="#FF8C00" android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="0" android:endColor="#FFEFD5" android:startColor="#FFDEAD" android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>