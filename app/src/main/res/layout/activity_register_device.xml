<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context=".activity.RegisterDeviceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/registerdevice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@mipmap/ic_ordersetting_back"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/NewPopupTheme"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/toolbar_registerdevice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册仪器"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerdevice_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <View
        android:id="@+id/registerdevice_background1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/registerdevice_background"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_toolbar"/>

    <TextView
        android:id="@+id/registerdevice_userid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="商家id*:"
        app:layout_constraintTop_toTopOf="@+id/registerdevice_background1"
        app:layout_constraintEnd_toStartOf="@+id/registerdevice_guideline1"/>
    <TextView
        android:id="@+id/registerdevice_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textColor="#333333"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_guideline1"
        app:layout_constraintTop_toTopOf="@+id/registerdevice_userid_text"/>
    <View
        android:id="@+id/registerdevice_userid_splitline"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_userid_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/registerdevice_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="商户名称*:"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_userid_splitline"
        app:layout_constraintEnd_toStartOf="@+id/registerdevice_guideline1"/>
    <TextView
        android:id="@+id/registerdevice_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textColor="#333333"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_guideline1"
        app:layout_constraintTop_toTopOf="@+id/registerdevice_username_text"/>



    <View
        android:id="@+id/registerdevice_background2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/registerdevice_background2"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_background1"/>

    <TextView
        android:id="@+id/registerdevice_factoryname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="公司名称:"
        app:layout_constraintTop_toTopOf="@+id/registerdevice_background2"
        app:layout_constraintEnd_toStartOf="@+id/registerdevice_guideline1"/>
    <EditText
        android:id="@+id/registerdevice_factoryname"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="#333333"
        android:textSize="15dp"
        android:hint="请输入公司名称"
        android:background="@drawable/registerdevice_edit"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_guideline1"
        app:layout_constraintTop_toTopOf="@+id/registerdevice_background2"
        app:layout_constraintBottom_toTopOf="@+id/registerdevice_factoryname_splitline"/>
    <View
        android:id="@+id/registerdevice_factoryname_splitline"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factoryname_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/registerdevice_factoryaddress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="公司地址:"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factoryname_splitline"
        app:layout_constraintBottom_toTopOf="@+id/registerdevice_factoryaddress_splitline"
        app:layout_constraintEnd_toStartOf="@+id/registerdevice_guideline1"/>
    <View
        android:id="@+id/registerdevice_factoryaddress_splitline"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factoryname_splitline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/registerdevice_factoryaddress"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入公司地址"
        android:maxLines="2"
        android:textSize="15dp"
        android:textColor="#333333"
        android:background="@drawable/registerdevice_edit"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factoryname_splitline"
        app:layout_constraintBottom_toTopOf="@+id/registerdevice_factoryaddress_splitline"/>

    <View
        android:id="@+id/registerdevice_devicelocation_splitline"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factoryaddress_splitline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/registerdevice_factorylocation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="仪器定位:"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factoryaddress_splitline"
        app:layout_constraintBottom_toTopOf="@+id/registerdevice_devicelocation_splitline"
        app:layout_constraintEnd_toStartOf="@+id/registerdevice_guideline1"/>
    <EditText
        android:id="@+id/registerdevice_factorylocation_longitude"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:hint="经度位置"
        android:textColor="#333333"
        android:gravity="center"
        android:background="@drawable/registerdevice_edit"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factoryaddress_splitline"
        app:layout_constraintBottom_toTopOf="@+id/registerdevice_devicelocation_splitline"
        app:layout_constraintVertical_bias="0.2"/>
    <TextView
        android:id="@+id/registerdevice_location_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:text="-"
        app:layout_constraintTop_toTopOf="@+id/registerdevice_factorylocation_longitude"
        app:layout_constraintBottom_toBottomOf="@+id/registerdevice_factorylocation_longitude"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_factorylocation_longitude"
        app:layout_constraintEnd_toStartOf="@+id/registerdevice_factorylocation_latitude"
        app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
        android:id="@+id/registerdevice_factorylocation_latitude"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:hint="纬度位置"
        android:textColor="#333333"
        android:gravity="center"
        android:background="@drawable/registerdevice_edit"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_location_split"
        app:layout_constraintTop_toTopOf="@+id/registerdevice_factorylocation_longitude"/>
    <Button
        android:id="@+id/registerdevice_getlocation"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="获取定位"
        android:textColor="#ffffff"
        android:background="@drawable/btn_password_confirm"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_factorylocation_longitude"
        app:layout_constraintStart_toStartOf="@+id/registerdevice_factorylocation_longitude"
        app:layout_constraintEnd_toEndOf="@+id/registerdevice_factorylocation_latitude"/>



    <TextView
        android:id="@+id/registerdevice_deviceexplanation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="仪器说明:"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_devicelocation_splitline"
        app:layout_constraintBottom_toBottomOf="@+id/registerdevice_background2"
        app:layout_constraintEnd_toStartOf="@+id/registerdevice_guideline1"/>
    <EditText
        android:id="@+id/registerdevice_deviceexplanation"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入仪器说明（可为空）"
        android:maxLines="2"
        android:textSize="15dp"
        android:textColor="#333333"
        android:background="@drawable/registerdevice_edit"
        app:layout_constraintStart_toEndOf="@+id/registerdevice_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_devicelocation_splitline"
        app:layout_constraintBottom_toBottomOf="@+id/registerdevice_background2"/>

    <TextView
        android:id="@+id/registerdevice_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#ff0000"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_background2"
        app:layout_constraintStart_toStartOf="@+id/registerdevice_background2"/>

    <Button
        android:id="@+id/registerdevice_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="立即注册！"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/registerdevice_background2"
        android:background="@drawable/registerdevice_confirm_btn"/>

    <ProgressBar
        android:id="@+id/registerdevice_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />





</androidx.constraintlayout.widget.ConstraintLayout>