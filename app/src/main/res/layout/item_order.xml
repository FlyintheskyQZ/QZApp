<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_order_isOk_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_order_ok"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/item_order_isOk_icon"
        app:layout_constraintTop_toTopOf="@id/item_order_isOk_icon"
        android:text="个人订单："/>

    <TextView
        android:id="@+id/item_order_isOk_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_order_isFinished"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/item_order_isOk_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/item_order_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_order_isOk_icon"
        android:background="#000000"/>


    <ImageView
        android:id="@+id/item_order_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_order_line"
        android:src="@mipmap/ic_item_order"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_order_instrument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="九龙湖仪器"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/item_order_icon"
        app:layout_constraintStart_toEndOf="@id/item_order_icon"/>

    <TextView
        android:id="@+id/item_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="九龙湖仪器"
        app:layout_constraintTop_toBottomOf="@id/item_order_instrument"
        app:layout_constraintStart_toStartOf="@id/item_order_instrument"/>

    <TextView
        android:id="@+id/item_order_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp"
        android:text="九龙湖仪器"
        app:layout_constraintTop_toBottomOf="@id/item_order_date"
        app:layout_constraintStart_toStartOf="@id/item_order_instrument"/>

</androidx.constraintlayout.widget.ConstraintLayout>