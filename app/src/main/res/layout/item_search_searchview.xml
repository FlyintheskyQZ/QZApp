<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/search_history_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/ic_searchfragment_hisotry_item"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@+id/search_history_item_text"
        app:layout_constraintBottom_toBottomOf="@+id/search_history_item_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/search_history_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好"
        android:textSize="20dp"
        android:textColor="@color/searchFragment_search_history_text"
        app:layout_constraintStart_toEndOf="@+id/search_history_item_icon"
        app:layout_constraintTop_toTopOf="@+id/search_history_item_icon"
        app:layout_constraintBottom_toBottomOf="@+id/search_history_item_icon"/>

    <ImageButton
        android:id="@+id/search_history_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_searchfragment_history_delete"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/search_history_item_text"
        app:layout_constraintBottom_toBottomOf="@+id/search_history_item_text"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>