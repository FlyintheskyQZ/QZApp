<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/device_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1."
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/device_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_devicedisplay_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/device_item_count"/>

    <TextView
        android:id="@+id/device_item_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="仪器编号:"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/device_item_icon"/>

    <TextView
        android:id="@+id/device_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/device_item_order_text"
        app:layout_constraintStart_toEndOf="@+id/device_item_order_text"/>

    <TextView
        android:id="@+id/device_item_factory_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司名称:"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/device_item_order_text"
        app:layout_constraintStart_toStartOf="@+id/device_item_order_text"/>

    <TextView
        android:id="@+id/device_item_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@+id/device_item_factory_text"
        app:layout_constraintStart_toEndOf="@+id/device_item_factory_text"/>

    <TextView
        android:id="@+id/device_item_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址:"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/device_item_factory_text"
        app:layout_constraintStart_toStartOf="@+id/device_item_factory_text"/>

    <TextView
        android:id="@+id/device_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@+id/device_item_address_text"
        app:layout_constraintStart_toEndOf="@+id/device_item_address_text"/>


    <ImageView
        android:id="@+id/device_item_finished_icon"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_devicedisplay_finished"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"/>

    <TextView
        android:id="@+id/device_item_finished_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成5单"
        app:layout_constraintTop_toBottomOf="@+id/device_item_finished_icon"
        app:layout_constraintStart_toStartOf="@+id/device_item_finished_icon"
        app:layout_constraintEnd_toEndOf="@+id/device_item_finished_icon"/>

    <View
        android:id="@+id/device_item_splitline"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#808080"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/device_item_icon"/>



</androidx.constraintlayout.widget.ConstraintLayout>