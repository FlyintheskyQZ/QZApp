<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_chat_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/ic_chat_item_boy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户：小明"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/item_chat_customer"
        app:layout_constraintStart_toEndOf="@id/item_chat_customer"/>

    <TextView
        android:id="@+id/item_chat_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A9A9A9"
        android:text="extra"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_name"
        app:layout_constraintStart_toStartOf="@+id/item_chat_name"/>


    <TextView
        android:id="@+id/item_chat_newsCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="@drawable/textview_chat_item"
        app:layout_constraintTop_toTopOf="@+id/item_chat_customer"
        app:layout_constraintBottom_toBottomOf="@+id/item_chat_customer"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/item_chat_bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_chat_customer"
        android:background="#000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>