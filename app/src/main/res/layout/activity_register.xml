<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_register_background"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/reg_bg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:text="@string/register_bg"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_bg_text">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/reg_ic_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_acount"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintTop_toTopOf="@+id/reg_username"
                app:layout_constraintBottom_toBottomOf="@+id/reg_username"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/reg_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/register_username"
                android:hint="@string/register_username"
                android:imeActionLabel="@string/action_register_in"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:theme="@style/RegisterEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_username"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/reg_ic_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_password"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintTop_toTopOf="@+id/reg_password"
                app:layout_constraintBottom_toBottomOf="@+id/reg_password"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/reg_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:inputType="textPassword"
                android:autofillHints="@string/register_password"
                android:hint="@string/register_password"
                android:imeActionLabel="@string/action_register_in"
                android:imeOptions="actionDone"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:theme="@style/RegisterEditText"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_password"
                app:layout_constraintTop_toBottomOf="@+id/reg_username" />

            <ImageView
                android:id="@+id/reg_ic_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_realname"
                android:scaleType="centerInside"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:layout_constraintTop_toTopOf="@+id/reg_realname"
                app:layout_constraintBottom_toBottomOf="@+id/reg_realname"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/reg_realname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/register_realname"
                android:hint="@string/register_realname"
                android:imeActionLabel="@string/action_register_in"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:theme="@style/RegisterEditText"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_realname"
                app:layout_constraintTop_toBottomOf="@+id/reg_password" />

            <ImageView
                android:id="@+id/reg_ic_realIdentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_realidentity"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintTop_toTopOf="@+id/reg_realIdentity"
                app:layout_constraintBottom_toBottomOf="@+id/reg_realIdentity"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/reg_realIdentity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/register_realID"
                android:hint="@string/register_realID"
                android:imeActionLabel="@string/action_register_in"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:theme="@style/RegisterEditText"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_realIdentity"
                app:layout_constraintTop_toBottomOf="@+id/reg_realname" />

            <ImageView
                android:id="@+id/reg_ic_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_phonenumber"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintTop_toTopOf="@+id/reg_phonenumber"
                app:layout_constraintBottom_toBottomOf="@+id/reg_phonenumber"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/reg_phonenumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/register_phonenumber"
                android:hint="@string/register_phonenumber"
                android:imeActionLabel="@string/action_register_in"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:theme="@style/RegisterEditText"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_phonenumber"
                app:layout_constraintTop_toBottomOf="@+id/reg_realIdentity" />

            <ImageView
                android:id="@+id/reg_ic_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_email"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintTop_toTopOf="@+id/reg_email"
                app:layout_constraintBottom_toBottomOf="@+id/reg_email"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/reg_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/register_email"
                android:hint="@string/register_email"
                android:imeActionLabel="@string/action_register_in"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:theme="@style/RegisterEditText"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_email"
                app:layout_constraintTop_toBottomOf="@+id/reg_phonenumber" />

            <ImageView
                android:id="@+id/reg_ic_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_gender"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintTop_toTopOf="@+id/reg_gender"
                app:layout_constraintBottom_toBottomOf="@+id/reg_gender"
                app:layout_constraintStart_toStartOf="parent"/>
            <RadioGroup
                android:id="@+id/reg_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_gender"
                app:layout_constraintTop_toBottomOf="@+id/reg_email" >

                <RadioButton
                    android:id="@+id/reg_select_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:scaleY="0.5"
                    android:scaleX="0.5"
                    android:button="@drawable/register_radiobtn"
                    android:gravity="center"
                    android:text="@string/register_select_male"
                    android:textSize="40dp"
                    android:textColor="#ffffff" />

                <RadioButton
                    android:id="@+id/reg_select_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/register_radiobtn"
                    android:checked="false"
                    android:scaleY="0.5"
                    android:scaleX="0.5"
                    android:gravity="center"
                    android:text="@string/register_select_female"
                    android:textSize="40dp"
                    android:textColor="#1B3561" />
            </RadioGroup>


            <ImageView
                android:id="@+id/reg_ic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_register_type"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintTop_toTopOf="@+id/reg_select"
                app:layout_constraintBottom_toBottomOf="@+id/reg_select"
                app:layout_constraintStart_toStartOf="parent"/>
            <RadioGroup
                android:id="@+id/reg_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reg_ic_type"
                app:layout_constraintTop_toBottomOf="@+id/reg_gender" >

                <RadioButton
                    android:id="@+id/reg_select_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:scaleY="0.5"
                    android:scaleX="0.5"
                    android:textSize="40dp"
                    android:button="@drawable/register_radiobtn"
                    android:gravity="center"
                    android:text="@string/register_select_normal"
                    android:textColor="#ffffff" />

                <RadioButton
                    android:id="@+id/reg_select_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:checked="false"
                    android:textSize="40dp"
                    android:scaleY="0.5"
                    android:scaleX="0.5"
                    android:button="@drawable/register_radiobtn"
                    android:gravity="center"
                    android:text="@string/register_select_factory"
                    android:textColor="#1B3561" />


            </RadioGroup>

            <Button
                android:id="@+id/register_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="48dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="64dp"
                android:textColor="#ffffff"
                android:enabled="false"
                android:text="@string/action_register_finished"
                android:textSize="18sp"
                android:background="@drawable/btn_register"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_select" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



    <ProgressBar
        android:id="@+id/register_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="#071B83"
        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>