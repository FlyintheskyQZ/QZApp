<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/report_item_pdficon"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_reportdisplay_pdf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/report_pdf_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/report_item_pdficon"/>

    <TextView
        android:id="@+id/report_pdf_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="稻花香"
        app:layout_constraintStart_toStartOf="@id/report_pdf_name"
        app:layout_constraintTop_toBottomOf="@+id/report_pdf_name"/>

    <TextView
        android:id="@+id/report_pdf_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23.5%"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@+id/report_pdf_material"
        app:layout_constraintStart_toEndOf="@+id/report_pdf_material"/>

    <TextView
        android:id="@+id/report_pdf_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11月5日"
        app:layout_constraintTop_toBottomOf="@+id/report_pdf_material"
        app:layout_constraintStart_toStartOf="@+id/report_pdf_material"/>

    <ImageView
        android:id="@+id/report_pdf_download"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_reportdisplay_downloaded"
        app:layout_constraintTop_toTopOf="@+id/report_item_pdficon"
        app:layout_constraintBottom_toBottomOf="@+id/report_item_pdficon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/report_pdf_splitline"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#808080"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/report_pdf_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>